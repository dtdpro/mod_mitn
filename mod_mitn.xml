<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>MitN In the News Module</name>
	<author>DtD Productions</author>
	<creationDate>Aug 2009</creationDate>
	<copyright>(C)2009-2011 DtD Productions All rights reserved.</copyright>
	<license>GPL v2</license>
	<authorEmail>mike@ditzthedaisy.com</authorEmail>
	<authorUrl>www.ditzthedaisy.com</authorUrl>
	<version>1.6</version>
	<description></description>
	<files>
		<filename module="mod_mitn">mod_mitn.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="count" type="text" default="5" label="Count" description="The number of items to display (default 5)" />
				<field name="showarchivelink" type="radio" default="0" label="Show Archive Link" description="Show archive link">
					<option	value="0">JNO</option>
					<option	value="1">JYES</option>
				</field>
				<field name="archivelinkid" type="text" label="Archive link item ID:" description="ItemID to archive pages" />
				<field name="archivelinktit" type="text" label="Archive link title:" description="label for archive link" />
			</fieldset>
		</fields>
	</config>
	
</extension>
